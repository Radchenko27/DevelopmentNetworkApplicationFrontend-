{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "tauri_app",
  "version": "0.1.0",
  "identifier": "com.drivers.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "plugins": {
    "http": {
      "enabled": true
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "tauri_app",
        
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}